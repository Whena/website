{ 
  "env": {
    "browser": true,
    "es6": true,
    "commonjs": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 9,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
		"semi": ["error", "always"],
		"indent": [2, 2],
    "no-trailing-spaces": ["error", { "ignoreComments": true }],
    "no-unused-vars": ["error"],
    "react/prop-types": 0,
    "react/jsx-uses-vars": [2],
    "no-console": 0
  },
  "globals": {
    "process": true
  }
}